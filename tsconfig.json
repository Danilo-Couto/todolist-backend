{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "target": "ES6",
    "allowJs": true,
    "removeComments": true,
    "baseUrl": "*.*",
    "paths": {
      "@controllers/*": ["./src/controllers"],
      "@services/*": ["./src/services"],
      "@models/*": ["./src/models"],
    },
    "module": "CommonJS",
    "moduleResolution": "Node"
  },
  "exclude": [
    "./tests/",
    "./node_modules/",
    "./dist/"
  ]
}